{% extends 'base.html.twig' %}

{% block title %}Hello World!{% endblock %}

{% block body %}

<div class="card-body">
    <h1 class="text-center bg-secondary text-light">{{ controller_name }}</h1>

    <div>
        <p class="text-center bg-secondary  text-light">Time : {{ utc_time }} _ Client IP : {{ client_ip }}</p>
    </div>
</div>

<div class="container">
    {% for comment in all %}
        <div>
            <div class="row">
                <div class="col align-self-start">
                    <img src="{{ comment.beer.url }}" alt="{{ comment.beer.name }}" width="40" height="100">
                    <p class ="mt-3">
                        {{ comment.beer.name }}
                    </p>
                </div>
                <div class="col align-self-center">
                {{ comment.textComment }}
                </div>
                <div class="col align-self-end">
                {{ comment.user.name }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
